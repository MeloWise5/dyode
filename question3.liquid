{% comments %}
    Task: Using liquid code and HTML, create a simple pagination container, "< 1 2 ... 5 >".
{% endcomments %}
{% assign paginationArray = 'page 1, page2, page 3, page 4, page 5, page 6' | split: ',' %}
Testing HeroKu Connection.
{% paginate paginationArray by 2 %}
{%for pageData in paginationArray %}
    {{ pageData | | capitalize }}
{% endfor %}
{% if paginate.next.is_link %}
    {{ paginate.next.title | link_to:paginate.next.url }}
{% endif %}
{% for part in paginate.parts %}
    {% if part.is_link %}
        {{ part.title | link_to: part.url }}
    {% endif %}
{% endfor %}
{% if paginate.previous.is_link %}
    {{ paginate.previous.title | link_to:paginate.previous.url }}
{% endif %}
{% endpaginate %}

